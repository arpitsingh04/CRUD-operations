<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/style.css">
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
    <div class=" p-10 text-white card">
        <div class="nav mb-10">
            <a href="/" class="text-blue-500">Create user</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">All users</h1>

        <div class="users flex gap-3 flex-wrap">
           <% users.forEach(function(user){ %>
            <div class="user w-70 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full h-52 bg-zinc-500 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="<%= user.image%>" alt="">
                </div>
                <h3 class="text-xl mt-3 tracking-tighter"><%= user.name%></h3>
                <h5 class="text-zinc-500"><%= user.email%></h5>
                <div class="flex gap-3 mt-10">
                    <a href="/edit/<%= user._id%>" class="text-zinc-200">Update user</a>
                    <a href="/delete/<%= user._id%>" class="text-red-500">Delete user</a>
                </div>
            </div>
          <% })%>
            
           
        </div>
       
    </div>
</body>
</html>